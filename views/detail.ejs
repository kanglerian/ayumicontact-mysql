<section class="section">
    <div class="section-header">
        <h1><%= contact[0].nama %></h1>
        <div class="section-header-breadcrumb">
          <div class="breadcrumb-item"><a href="/">Daftar Kontak</a></div>
          <div class="breadcrumb-item"><%= contact[0].nama %></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
              <form action="/contact?_method=PUT" method="POST">
                <div class="card-body">
                  <input type="hidden" name="id" value="<%= contact[0].id %>">
                  <div class="form-group">
                    <label>Nama lengkap</label>
                    <input type="text" class="form-control" name="nama" value="<%= contact[0].nama %>">
                  </div>
                  <div class="form-group">
                    <label>No. Handphone</label>
                    <input type="number" class="form-control" name="nohp" value="<%= contact[0].nohp %>">
                  </div>
                  <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email" value="<%= contact[0].email %>">
                  </div>
                  <div class="form-group">
                    <label>Identitas</label>
                    <input type="text" class="form-control" name="jabatan" value="<%= contact[0].jabatan %>">
                  </div>
                </div>
                <div class="card-footer text-right">
                  <button type="submit" class="btn btn-primary btn-md btn-block" type="submit">Simpan</button>
                </div>
              </form>
            </div>
        </div>
    </div>
</section>